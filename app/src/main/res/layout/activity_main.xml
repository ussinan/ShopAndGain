<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sinan.shopandgain.MainActivity">

   <com.google.android.material.card.MaterialCardView
       android:id="@+id/header_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:cardCornerRadius="0dp"
       app:cardElevation="120dp"
       android:outlineSpotShadowColor="@color/black"
       android:outlineAmbientShadowColor="@color/black"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@drawable/pggradient"
           >
           <TextView
               android:padding="12dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/p_g"
               android:textColor="#EDDEE0"
               android:textStyle="bold"
               android:textSize="16sp"
               android:layout_gravity="center"

               />
       </LinearLayout>

   </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="12dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Sadakat puanı toplamak ve hediyeler kazanmak için fişinizin fotoğrafını çekip yollayın."
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pggradient"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="YOLLA!"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:elevation="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

